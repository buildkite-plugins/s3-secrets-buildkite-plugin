#!/bin/bash
set -e -o pipefail -u

basedir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"
envsink="$basedir/env.fifo"
credhelper="$basedir/git-credential-s3-secrets"

remove_envsink() {
  rm -f -- "$envsink"
}
remove_envsink
mkfifo "$envsink"
trap remove_envsink EXIT

BUILDKITE_PLUGIN_S3_SECRETS_ENV_SINK="$envsink" \
  BUILDKITE_PLUGIN_S3_SECRETS_GIT_CREDENTIAL_HELPER="$credhelper" \
  ./loader &

envscript="$(cat "$envsink")"
wait # for loader to finish
env_before="$(env | sort)"
echo "Evaluating ${#envscript} bytes of env"
set -o allexport
eval "$envscript"
set +o allexport

if [[ "${BUILDKITE_PLUGIN_S3_SECRETS_DUMP_ENV:-}" =~ ^(true|1)$ ]] ; then
  echo "~~~ Environment variables that were set" >&2;
  comm -13 <(echo "$env_before") <(env | sort) || true
fi
